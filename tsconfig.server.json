{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDirs": [
      "server",
      "app"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "app/components/*"
      ],
      "containers/*": [
        "app/containers/*"
      ],
      "types/*": [
        "app/types/*"
      ],
      "assets/*": [
        "app/assets/*"
      ],
      "utils/*": [
        "app/utils/*"
      ]
    },
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "index.d.ts"
  ]
}
