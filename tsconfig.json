{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es6"
    ],
    "outDir": "dist",
    "rootDir": "app",
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "app/components/*"
      ],
      "containers/*": [
        "app/containers/*"
      ],
      "types/*": [
        "app/types/*"
      ],
      "assets/*": [
        "app/assets/*"
      ],
      "utils/*": [
        "app/utils/*"
      ],
      "selectors/*": [
        "app/selectors/*"
      ]
    },
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "server",
    "postcss.config.js"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": false
  }
}
